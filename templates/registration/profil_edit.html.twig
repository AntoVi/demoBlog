{% extends "base.html.twig" %}

{% block title %}
    BlogSymfony | Edit profil
{% endblock %}

{% block body %}

    <h1 class="text-center my-5"> Modification de vos informations personnelles </h1>

    {{ form_start(formUpdate) }}

        {{ form_row(formUpdate.email) }}

        {{ form_row(formUpdate.prenom) }}

        {{ form_row(formUpdate.nom) }}

        {{ form_row(formUpdate.adresse) }}

        {{ form_row(formUpdate.ville) }}

        {{ form_row(formUpdate.codePostal) }}

            <button class="btn btn-dark"> Enregistrer les modifications </button>

    {{ form_end(formUpdate) }}
    
{% endblock %}