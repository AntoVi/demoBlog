<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
     rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">


     <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      i {
          font-size: 20px !important;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap5.min.css"> 

    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap5.min.js"></script>

    <script src="{{ asset('js/dataTable.js') }}"></script>

    {% block stylesheets %}
        
    {% endblock %}

     <link href="{{asset('css/admin.css') }}" rel="stylesheet">

    <title>
    {% block title %}
        BlogSymfony | BackOffice
    {% endblock %}
    </title>
  </head>
     <body>
        <main>
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark position-fixed h-100" style="width: 20%;">
                <a href="{{ path('app_admin') }}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                
                <span class="fs-4">BackOffice</span>
                </a>
                {# Renvoi le nom de la route définit dans le controller #}
                <hr>
                {# {{ dump(app.request.attributes.get('_route')) }} #}
                {# on stock le nom de la route dans une variable twig #}
                {% set route_name = app.request.attributes.get('_route') %}
                <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    {# on affecte la classe 'active' si la variable 'route_name' est bien
                    égale à la route du path (route_name == 'app_admin') #}
                    <a href="{{ path('app_admin') }}" class="nav-link  text-white {% if route_name == 'app_admin' %} active {% endif %}" 
                    aria-current="page">
                    <i class="bi bi-house-door-fill"></i>
                    Home
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_catalogues_create') }}" class="nav-link text-white {% if route_name == 'app_admin_catalogues_create' %} 
                    active {% endif %}">
                   <i class="bi bi-book-fill"></i>
                    Nouveau Catalogue
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_catalogue') }}" class="nav-link text-white {% if route_name == 'app_admin_catalogue' %} active {% endif %}">
                   <i class="bi bi-book-fill"></i>
                    Catalogues
                    </a>
                </li>
                
                <li>
                    <a href="{{ path('app_admin_categorie_add') }}" class="nav-link text-white {% if route_name == 'app_admin_categorie_add' %} active {% endif %}">
                    <i class="bi bi-arrow-right-square-fill"></i>
                   Nouvelle Catégorie
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_categorie') }}" class="nav-link text-white {% if route_name == 'app_admin_categorie' %} active {% endif %}">
                    <i class="bi bi-arrow-right-square-fill"></i>
                    Catégories
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_commentaire') }}" class="nav-link text-white {% if route_name == 'app_admin_commentaire' %} active {% endif %}">
                   <i class="bi bi-chat-left-dots-fill"></i>
                    Commentaires
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_admin_user') }}" class="nav-link text-white {% if route_name == 'app_admin_user' %} active {% endif %}">
                    <i class="bi bi-person-circle"></i>
                    Utilisateurs
                    </a>
                </li>
                </ul>
                <hr>
                <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>{{ app.user.prenom }} {{ app.user.nom }}</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="{{ path('blog_create') }}">Nouveau catalogue.</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_profil') }}">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ path('blog') }}">Quitter</a></li>
                     <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                </ul>
                </div>
            </div>

            <div class="p-2" style="width: 80%; margin-left: 20%; height: auto; overflow-y: auto; overflow-x: hidden;" >
            {% block body %}
                
            {% endblock %}
            </div>
        
        </main>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    {% block javascripts %}
        
    {% endblock %}

    
     </body>
</html>






